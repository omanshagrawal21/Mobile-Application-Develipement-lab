        android:layout_width="159dp" android:layout_height="59dp" android:layout_marginTop="52dp" android:text="Select Cards"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" app:layout_constraintEnd_toStartOf="@+id/b2" app:layout_constraintHorizontal_bias="0.5" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/et2" />

    <Button
        android:id="@+id/b2" android:layout_width="105dp" android:layout_height="59dp" android:layout_marginTop="52dp" android:text="Sort"
